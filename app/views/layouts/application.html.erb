      	</div>

	<div id="sbi_1">
      		<div class="sidebaritem">
      			<div class="sbihead">
					<h1><%=	link_to_function("List of Episodes:", visual_effect(:toggle_slide, :sbi1, :duration => 1))%></h1>
      			</div>
				<div id="sbi1">
				<div class="sbilinks">
					<div id="episode_selector">
						<%= render :partial => "postset/selector"%>
					</div>
						<p><%= link_to("Random Episode Link", {:controller => :postset, :action => :view, :id => "#{rand(Postset.find(:all).last.id)+1}"}, :style => "color: rgb(238, 102, 0); margin-left: 15%; margin-right: 15%;")%></p>
				</div>
				</div>
      		</div>
      	</div>
		<div id="sbi_2">
			<div class="sidebaritem">
				<div class="sbihead">
					<h1><%=	link_to_function("Find by tag:", visual_effect(:toggle_slide, :sbi2, :duration => 1))%></h1>
				</div>
				<div id="sbi2">
				<div class="sbisearch">
					<%= render :partial => "tag/search"%>
				</div>
				</div>
			</div>
		</div>
      <% if logged_in? -%>
		<div id="sbi_3">
      	<!-- This is where people can add a link -->
        <div class="sidebaritem">
          <div class="sbihead">
            <h1><%=	link_to_function("Suggest a Story:", visual_effect(:toggle_slide, :sbi3, :duration => 1))%></h1>
          </div>
		  <div id="sbi3">
          <div class="sbilinks">
          	<div id="link_flash">
          	<%= flash[:link_create_status]%>
          	</div>
          	<div id="link_error">
          	</div>
            <%= render :partial => "link/form"%>
          </div>
		  </div>
        </div> 
		</div>
	  <% end -%>
		<div id="sbi_4">
        <!-- This is where the list of links is shown -->
		<div class="sidebaritem">
          <div class="sbihead">
          	<div class="sbilinklist">
           	 <h1><%=	link_to_function("Links For the Next Episode:", visual_effect(:toggle_slide, :sbi4, :duration => 1))%></h1>
			</div> 
          </div>
		  <div id="sbi4">
          <div class="sbilinks">
          	<ul id="linkul">
			<%unless Link.find_by_postset_id('-1') == nil %>
            <%= render :partial => 'postset/linklist', :collection => Link.find(:all, :conditions => {:postset_id => -1})%>
			<%end%>
			</ul>			
          </div>
		  </div>
        </div>
		</div> 
		<div id="sbi_5">
		<!-- A list of the Feeds -->
       <div class="sidebaritem">
          <div class="sbihead">
            <h1><%=	link_to_function("Feeds:", visual_effect(:toggle_slide, :sbi5, :duration => 1))%></h1>
          </div>
		  <div id="sbi5">
          <div class="sbicontent">
            <p>Click on the feeds below to subscribe using your favorite RSS reader.</p>
