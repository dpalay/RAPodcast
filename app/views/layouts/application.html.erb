			<div class="sbihead">
				<h1><%=	link_to_function("Advertisements:", visual_effect(:toggle_slide, :sbi6, :duration => 1))%></h1>
			</div>
			<div id="sbi6">
	        <div class="sbicontent">
	        	<!-- Insert Ad stuff here -->
				<script type="text/javascript"><!--
